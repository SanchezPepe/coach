rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Body composition subcollection
      match /bodyComposition/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Nutrition logs subcollection
      match /nutritionLogs/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Cache collections - read only for authenticated users, write only via Functions
    match /stravaCache/{userId}/{document=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only Cloud Functions can write
    }

    match /hevyCache/{userId}/{document=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
